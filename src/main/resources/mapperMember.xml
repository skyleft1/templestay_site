<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.mysql.mapperMember">
    
    <select id="getMemberOne" parameterType="string" resultType="ModelMember">
        SELECT *
          FROM tb_member
         WHERE id = #{id}
    </select>
    <!--  파라미터타입string 은 name 이고 result타입은 전부이기에 *임 -->
    
    <select id="getMemberList" resultType="ModelMember">
        SELECT *
          FROM tb_member
    </select>         
    
    <insert id="insertMember" parameterType="ModelMember">
        INSERT INTO 
        tb_member ( id, password, name, email, phone )
        VALUES ( #{id}, #{password}, #{name}, #{email}, #{phone} )
    </insert>
    
    <insert id="insertMemberList" parameterType="java.util.List">
        INSERT INTO tb_member( id, password, name, email, phone )
        VALUES
            <foreach collection="list" item="item" index="index" open="(" separator="),(" close=")">
                #{item.id} , #{item.password} , #{item.name}, #{item.email} , #{item.phone}
            </foreach>
    </insert>
 </mapper>
